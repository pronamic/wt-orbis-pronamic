<?xml version="1.0"?>

<ruleset name="Orbis 3">
	<config name="installed_paths" value="../../wp-coding-standards/wpcs" />

	<rule ref="WordPress">
		<exclude name="Squiz.Commenting" />

		<exclude name="WordPress.Files.FileName.UnderscoresNotAllowed" />
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
		<exclude name="WordPress.Functions.DontExtract.extract" />

		<exclude name="WordPress.Variables.GlobalVariables.OverrideProhibited" />
		<exclude name="WordPress.VIP.SlowDBQuery.slow_db_query_tax_query" />
		<exclude name="WordPress.Functions.DontExtract.extract_extract" />
	</rule>
</ruleset>
